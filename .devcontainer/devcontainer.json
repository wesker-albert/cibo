{
	"name": "cibo",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "3.11-bullseye",
			"NODE_VER": "16",
			"NPM_VER": "9.6.4",
			"PIPX_VER": "1.2.0",
			"POETRY_VER": "1.4.2"
		}
	},
	"remoteUser": "vscode",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/cibo,type=bind,consistency=delegated",
	"workspaceFolder": "/home/vscode/cibo",
	"postCreateCommand": "bash .devcontainer/postCreate.sh",
	"postAttachCommand": "bash .devcontainer/postAttach.sh",
	"appPort": 51234,
	"customizations": {
		"vscode": {
			"settings": {
				"[python]": {
					"editor.codeActionsOnSave": {
						"source.organizeImports": true
					},
					"editor.formatOnSave": true,
					"editor.rulers": [
						88
					]
				},
				"python.formatting.provider": "black",
				"python.linting.enabled": true,
				"python.linting.lintOnSave": true,
				"python.linting.pylintArgs": [
					"--rcfile",
					"pyproject.toml"
				],
				"python.linting.pylintEnabled": true,
				"python.testing.pytestArgs": [
					"cibo",
					"-vv"
				],
				"python.testing.pytestEnabled": true,
				"python.testing.unittestEnabled": false,
				"python.analysis.autoImportCompletions": true,
				"isort.args": [
					"--settings-path",
					"${workspaceFolder}/pyproject.toml"
				],
				"[json]": {
					"editor.formatOnSave": true,
					"editor.detectIndentation": false,
					"editor.insertSpaces": true,
					"editor.tabSize": 4
				},
				"coverage-gutters.coverageBaseDir": "**",
				"coverage-gutters.coverageFileNames": [
					"coverage.xml"
				],
				"coverage-gutters.coverageReportFileName": "coverage/**/index.html",
				"coverage-gutters.ignoredPathGlobs": "**/{node_modules}/**",
				"errorLens.enabledDiagnosticLevels": [
					"error",
					"hint",
					"info",
					"warning"
				],
				"errorLens.exclude": [
					"\"_.+\" is not accessed",
					"\"args\" is not accessed",
					"\"kwargs\" is not accessed"
				],
				"files.associations": {
					".env.*": "env"
				},
				"gitlens.currentLine.enabled": false,
				"emeraldwalk.runonsave": {
					"commands": [
						{
							"match": "package-lock.json|package.json",
							"cmd": "make init_node"
						},
						{
							"match": "poetry.lock|pyproject.toml",
							"cmd": "make init_poetry"
						}
					]
				},
				"terminal.integrated.defaultProfile.linux": "zsh", 
				"terminal.integrated.profiles.linux": {
					"zsh": {
						"path": "/bin/zsh"
					}
				}
			},
			"extensions": [
				"eamodio.gitlens",
				"emeraldwalk.RunOnSave",
				"IronGeek.vscode-env",
				"magicstack.MagicPython",
				"ms-python.isort",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ninoseki.vscode-pylens",
				"ryanluker.vscode-coverage-gutters",
				"usernamehw.errorlens",
				"VisualStudioExptTeam.vscodeintellicode"
			]
		}
	}
}